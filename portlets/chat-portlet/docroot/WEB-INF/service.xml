<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_0_0.dtd">

<service-builder package-path="com.liferay.chat">
	<namespace>Chat</namespace>
	<entity name="Entry" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="entryId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="userId" type="long" />
		<column name="createDate" type="long" />

		<!-- Other fields -->

		<column name="content" type="String" />
		<column name="receiverUserId" type="long" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="ReceiverUserId" return-type="Collection">
			<finder-column name="receiverUserId" />
		</finder>
	</entity>
</service-builder>