<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Knowledge Base Admin</display-name>
		<portlet-class>com.liferay.knowledgebase.admin.portlet.AdminPortlet</portlet-class>
		<init-param>
			<name>jsp-path</name>
			<value>/admin/</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/admin/view.jsp</value>
		</init-param>
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Knowledge Base Admin</title>
			<short-title>Knowledge Base Admin</short-title>
			<keywords>Knowledge Base Admin</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<display-name>Knowledge Base Aggregator</display-name>
		<portlet-class>com.liferay.knowledgebase.aggregator.portlet.AggregatorPortlet</portlet-class>
		<init-param>
			<name>jsp-path</name>
			<value>/aggregator/</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/aggregator/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Knowledge Base Aggregator</title>
			<short-title>Knowledge Base Aggregator</short-title>
			<keywords>Knowledge Base Aggregator</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>3</portlet-name>
		<display-name>Knowledge Base Display</display-name>
		<portlet-class>com.liferay.knowledgebase.display.portlet.DisplayPortlet</portlet-class>
		<init-param>
			<name>jsp-path</name>
			<value>/display/</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/display/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Knowledge Base Display</title>
			<short-title>Knowledge Base Display</short-title>
			<keywords>Knowledge Base Display</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>