<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Knowledge Base</display-name>
		<portlet-class>com.liferay.kb.knowledgebase.portlet.KnowledgeBasePortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/knowledge_base/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Knowledge Base</title>
			<short-title>Knowledge Base</short-title>
			<keywords>Knowledge Base</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>tag</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<display-name>Knowledge Base Aggregator</display-name>
		<portlet-class>com.liferay.kb.knowledgebaseaggregator.portlet.KnowledgeBaseAggregatorPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/knowledge_base_aggregator/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Knowledge Base Aggregator</title>
			<short-title>Knowledge Base Aggregator</short-title>
			<keywords>Knowledge Base Aggregator</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<public-render-parameter>
		<identifier>tag</identifier>
   		<qname xmlns:x="http://www.liferay.com/public-render-parameters">x:tag</qname>
	</public-render-parameter>
</portlet-app>