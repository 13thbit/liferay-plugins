<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.liferay.knowledgebase.action.ConfigurationActionImpl</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.knowledgebase.portlet.KnowledgeBaseFriendlyURLMapper</friendly-url-mapper-class>
		<header-portlet-css>/css/knowledge-base.css</header-portlet-css>
		<css-class-wrapper>portlet-knowledge-base</css-class-wrapper>		
	</portlet>
	<role-mapper>
