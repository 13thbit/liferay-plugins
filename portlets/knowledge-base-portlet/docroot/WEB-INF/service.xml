<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_1_0.dtd">

<service-builder package-path="com.liferay.kb.knowledgebase">
	<author>Jorge Ferrer</author>
	<namespace>KB</namespace>
	<entity name="KBArticle" uuid="true" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="articleId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Resource -->

		<column name="resourcePrimKey" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="title" type="String" />
		<column name="htmlTitle" type="String" />
		<column name="version" type="double" />
		<column name="minorEdit" type="boolean" />
		<column name="content" type="String" />
		<column name="description" type="String" />
		<column name="head" type="boolean" />
		<column name="template" type="boolean" />
		<column name="draft" type="boolean" />
		<column name="parentResourcePrimKey" type="long" />

		<!-- Order -->

		<order by="asc">
			<order-column name="title" case-sensitive="false" />
			<order-column name="version" />
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="ParentResourcePrimKey" return-type="Collection">
			<finder-column name="parentResourcePrimKey" />
		</finder>
		<finder name="ResourcePrimKey" return-type="Collection">
			<finder-column name="resourcePrimKey" />
		</finder>
		<finder name="C_D" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="draft" />
		</finder>
		<finder name="G_T" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="title" />
		</finder>
		<finder name="R_H" return-type="Collection">
			<finder-column name="resourcePrimKey" />
			<finder-column name="head" />
		</finder>
		<finder name="R_V" return-type="KBArticle">
			<finder-column name="resourcePrimKey" />
			<finder-column name="version" />
		</finder>
		<finder name="G_H_T" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="head" />
			<finder-column name="template" />
		</finder>
		<finder name="G_T_H" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="title" />
			<finder-column name="head" />
		</finder>
		<finder name="G_T_V" return-type="KBArticle">
			<finder-column name="groupId" />
			<finder-column name="title" />
			<finder-column name="version" />
		</finder>
		<finder name="P_H_T_D" return-type="Collection">
			<finder-column name="parentResourcePrimKey" />
			<finder-column name="head" />
			<finder-column name="template" />
			<finder-column name="draft" />
		</finder>
		<finder name="C_H_T_D" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="head" />
			<finder-column name="template" />
			<finder-column name="draft" />
		</finder>
		<finder name="G_H_T_D" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="head" />
			<finder-column name="template" />
			<finder-column name="draft" />
		</finder>
	</entity>
	<entity name="KBArticleResource" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="resourcePrimKey" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />

		<!-- Other fields -->

		<column name="title" type="String" />

		<!-- Finder methods -->

		<finder name="G_T" return-type="KBArticleResource">
			<finder-column name="groupId" />
			<finder-column name="title" />
		</finder>
	</entity>
	<entity name="KBFeedbackEntry" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="feedbackEntryId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="articleResourcePrimKey" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="comments" type="String" />
		<column name="score" type="int" />
		<column name="vote" type="int" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="ArticleResourcePrimKey" return-type="Collection">
			<finder-column name="articleResourcePrimKey" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="A_S" return-type="Collection">
			<finder-column name="articleResourcePrimKey" />
			<finder-column name="score" />
		</finder>
		<finder name="A_U" return-type="KBFeedbackEntry">
			<finder-column name="articleResourcePrimKey" />
			<finder-column name="userId" />
		</finder>
		<finder name="A_V" return-type="Collection">
			<finder-column name="articleResourcePrimKey" />
			<finder-column name="vote" />
		</finder>
	</entity>
	<entity name="KBFeedbackStats" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="feedbackStatsId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="articleResourcePrimKey" type="long" />

		<!-- Other fields -->

		<column name="averageScore" type="double" />
		<column name="totalScoreEntries" type="int" />
		<column name="totalVotes" type="int" />
		<column name="yesVotes" type="int" />

		<!-- Finder methods -->

		<finder name="ArticleResourcePrimKey" return-type="KBFeedbackStats">
			<finder-column name="articleResourcePrimKey" />
		</finder>
	</entity>
	<exceptions>
		<exception>ArticleTitle</exception>
		<exception>ArticleVersion</exception>
	</exceptions>
</service-builder>