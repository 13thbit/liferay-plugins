<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_2_0.dtd">

<service-builder package-path="com.liferay.bi.report">
	<namespace>Report</namespace>
	<entity name="ReportDefinition" uuid="true" local-service="true"
			remote-service="false" >

		<!-- PK fields -->

		<column name="definitionId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedBy" type="long" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="definitionName" type="String" />
		<column name="description" type="String" />
		<column name="reportName" type="String" />
		<column name="reportParameters" type="String" /> <!-- name=value,name=value -->
		<column name="reportFormat" type="String"/>
		<column name="dataSourceName" type="String" convert-null="false"/>

		<!-- Order -->

		<order by="asc">
			<order-column name="modifiedDate"/>
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="CompanyGroupId" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
		</finder>
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="DefinitionName" return-type="Collection">
			<finder-column name="definitionName" />
		</finder>

	</entity>
	<entity name="RequestedReport" uuid="true" local-service="true"
			remote-service="false" >

		<!-- PK fields -->

		<column name="requestId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="definitionId" type="long" />
		<column name="requestStatus" type="String" />
		<column name="isSchedule" type="boolean" />

		<!-- Order -->

		<order by="asc">
			<order-column name="modifiedDate"/>
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="CompanyGroupId" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
		</finder>
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="RequestId" return-type="ReportRequest">
			<finder-column name="requestId" />
		</finder>
		<finder name="DefinitionId" return-type="Collection">
			<finder-column name="definitionId" />
		</finder>

	</entity>
	<exceptions>
		<exception>DefinitionName</exception>
		<exception>DefinitionFormat</exception>
		<exception>DefinitionFile</exception>
	</exceptions>
</service-builder>
