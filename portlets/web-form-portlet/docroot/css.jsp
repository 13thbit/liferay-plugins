<%--Portlet Configuration --%>

.portlet-configuration .lfr-panel-content {
	padding: 0 1em;
}

.portlet-configuration fieldset.rows-container {
	border: none;
	margin-top: 0;
}

.portlet-configuration .editing-disabled dt {
	color: #999999;
	float: left;
	font-weight: bold;
	width: 6em;
}

.portlet-configuration .lfr-form-row .aui-ctrl-holder {
	margin-left: 2em;
}

.portlet-configuration .lfr-form-row .aui-ctrl-holder.optional-control {
	margin: 1.3em;
}

.portlet-configuration .lfr-form-row .aui-ctrl-holder.options, .portlet-configuration .lfr-form-row .validation .aui-ctrl-holder {
	clear: both;
	float: none;
}

.portlet-configuration .lfr-form-row .field-title {
	color: #000;
	font-size: 120%;
	font-weight: bold;
	padding: 3px;
}

.portlet-configuration .validation {
	clear: left;
}