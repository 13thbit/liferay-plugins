<?xml version="1.0"?>

<project name="sample-hibernate-portlet" basedir="." default="deploy">
	<property name="plugin.version" value="1" />

	<import file="../build-common-portlet.xml" />

	<target name="compile">
		<copy todir="docroot/WEB-INF/lib">
			<fileset
				dir="${app.server.lib.portal.dir}"
				includes="antlr.jar,commons-collections.jar,commons-httpclient.jar,commons-logging.jar,concurrent.jar,dom4j.jar,hibernate3.jar"
			/>
		</copy>

		<antcall target="build-common-plugin.compile" />
	</target>
</project>