<?xml version="1.0"?>

<project name="build-common-portlet">
	<property name="project.dir" value="../.." />

	<import file="../build-common-plugin.xml" />


	<path id="plugin-test.classpath">
        <fileset dir="${project.dir}/lib">
            <include name="junit-4.4.jar"/>
        </fileset>
        <fileset dir="${project.dir}/lib/jmock/2.4">
            <include name="cglib-nodep-2.1_3.jar"/>
            <include name="hamcrest-core-1.1.jar"/>
            <include name="hamcrest-library-1.1.jar"/>
            <include name="objenesis-1.0.jar"/>
        </fileset>
        <fileset dir="${project.dir}/lib/jmock/2.4">
            <include name="jmock-junit4-2.4.0.jar"/>
            <include name="jmock-2.4.0.jar"/>
        </fileset>
    </path>

    <!-- Project properties-->
    <property name="src.dir.test" value="docroot/WEB-INF/test"/>
    <property name="build.dir" value="build"/>
    <property name="build.dir.test" value="build/test"/>
    <property name="build.dir.test.classes" value="${build.dir.test}/classes"/>
    <property name="build.dir.test.reports" value="${build.dir.test}/reports"/>
    <property name="build.dir.test.reports.xml"
              value="${build.dir.test.reports}/xml"/>
    <property name="build.dir.test.reports.html"
              value="${build.dir.test.reports}/html"/>


    <!-- Initialize the build  -->
    
    <target name="init.test">
        <mkdir dir="${build.dir.test}"/>
        <mkdir dir="${build.dir.test.classes}"/>
        <mkdir dir="${build.dir.test.reports}"/>
        <mkdir dir="${build.dir.test.reports.xml}"/>
        <mkdir dir="${build.dir.test.reports.html}"/>

    </target>


    <!-- Compile the test classes -->
    <target name="compile.test" depends="compile, init.test">
        <javac fork="${javac.fork}"
               memoryMaximumSize="${javac.memoryMaximumSize}"
               compiler="${javac.compiler}"
               debug="${javac.debug}"
               optimize="${javac.optimize}"
               deprecation="${javac.deprecation}"
               srcdir="${src.dir.test}"
               destdir="${build.dir.test.classes}"
               includes="**/*.java">
            <classpath>
                <path refid="plugin.classpath"/>
                <path refid="plugin-test.classpath"/>
            </classpath>
        </javac>
    </target>

    <!-- Execute the test classes -->
    <target name="test" depends="compile.test">
        <junit printsummary="${junit.printsummary}" fork="${junit.fork}"
               haltonfailure="${junit.haltonfailure}"
               failureproperty="${junit.failureproperty}"
               maxmemory="${junit.maxmemory}">
            <classpath>
                <path refid="plugin.classpath"/>
                <path refid="plugin-test.classpath"/>
                <pathelement location="${build.dir.test.classes}"/>
            </classpath>
            <formatter type="xml"/>
            <batchtest fork="${junit.fork}" todir="${build.dir.test.reports.xml}">
                <fileset dir="${src.dir.test}">
                    <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>
        </junit>
        <junitreport todir="${build.dir.test.reports.xml}">
            <fileset dir="${build.dir.test.reports.xml}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${build.dir.test.reports.html}"/>
        </junitreport>
    </target>

    <target name="clean.test">
        <delete dir="${build.dir}"/>
    </target>

	<target name="build-service">
		<mkdir dir="docroot/WEB-INF/classes" />
		<mkdir dir="docroot/WEB-INF/lib" />
		<mkdir dir="docroot/WEB-INF/sql" />

		<path id="service.classpath">
			<path refid="lib.classpath" />
			<path refid="portal.classpath" />
			<fileset dir="docroot/WEB-INF/lib" includes="*.jar" />
			<pathelement location="docroot/WEB-INF/classes" />
		</path>

		<java
			classname="com.liferay.portal.tools.ServiceBuilder"
			classpathref="service.classpath"
			fork="true"
			maxmemory="256m"
			newenvironment="true"
		>
			<jvmarg value="-Dorg.apache.commons.logging.Log=org.apache.commons.logging.impl.Log4JLogger" />
			<jvmarg value="-Dservice.input.file=docroot/WEB-INF/service.xml" />
			<jvmarg value="-Dservice.hbm.file=docroot/WEB-INF/src/META-INF/portlet-hbm.xml" />
			<jvmarg value="-Dservice.model.hints.file=docroot/WEB-INF/src/META-INF/portlet-model-hints.xml" />
			<jvmarg value="-Dservice.spring.file=docroot/WEB-INF/src/META-INF/portlet-spring.xml" />
			<jvmarg value="-Dservice.spring.data.source.file=docroot/WEB-INF/src/META-INF/data-source-spring.xml" />
			<jvmarg value="-Dservice.api.dir=docroot/WEB-INF/src" />
			<jvmarg value="-Dservice.impl.dir=docroot/WEB-INF/src" />
			<!--<jvmarg value="-Dservice.json.file=docroot/js/service_unpacked.js" />-->
			<jvmarg value="-Dservice.sql.dir=docroot/WEB-INF/sql" />
			<jvmarg value="-Dservice.sql.file=tables.sql" />
			<jvmarg value="-Dservice.auto.namespace.tables=true" />
			<jvmarg value="-Dservice.base.model.impl.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.base.persistence.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.bean.locator.util.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.principal.bean.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.props.util.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.spring.hibernate.package=com.liferay.portlet.service" />
			<jvmarg value="-Dservice.spring.util.package=com.liferay.portlet.service" />
		</java>

		<delete file="ServiceBuilder.temp" />

		<!--<antcall target="build-javascript-cmd">
			<param name="js.from.file" value="docroot/js/service_unpacked.js" />
			<param name="js.to.file" value="docroot/js/service_packed.js" />
		</antcall>-->
	</target>
</project>
