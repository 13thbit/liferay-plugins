<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_0_0.dtd">

<routes>
	<route>
		<pattern>GET/</pattern>
		<default-parameter name="action">index</default-parameter>
		<default-parameter name="controller">assets</default-parameter>
		<default-parameter name="format">html</default-parameter>
		<default-parameter name="method">GET</default-parameter>
	</route>
	<route>
		<pattern>GET/{controller}</pattern>
		<default-parameter name="action">index</default-parameter>
		<default-parameter name="format">html</default-parameter>
		<default-parameter name="method">GET</default-parameter>
	</route>
	<route>
		<pattern>GET/{controller}.{format}</pattern>
		<default-parameter name="action">index</default-parameter>
		<default-parameter name="method">GET</default-parameter>
	</route>
	<route>
		<pattern>POST/{controller}</pattern>
		<default-parameter name="action">create</default-parameter>
		<default-parameter name="format">html</default-parameter>
		<default-parameter name="method">POST</default-parameter>
	</route>
	<route>
		<pattern>POST/{controller}.{format}</pattern>
		<default-parameter name="action">create</default-parameter>
		<default-parameter name="method">POST</default-parameter>
	</route>
	<route>
		<pattern>GET/{controller}/{\d+:id}</pattern>
		<default-parameter name="action">view</default-parameter>
		<default-parameter name="format">html</default-parameter>
		<default-parameter name="method">GET</default-parameter>
	</route>
	<route>
		<pattern>GET/{controller}/{\d+:id}.{format}</pattern>
		<default-parameter name="action">view</default-parameter>
		<default-parameter name="method">GET</default-parameter>
	</route>
	<route>
		<pattern>POST/{controller}/{\d+:id}</pattern>
		<default-parameter name="action">update</default-parameter>
		<default-parameter name="format">html</default-parameter>
		<default-parameter name="method">POST</default-parameter>
	</route>
	<route>
		<pattern>POST/{controller}/{\d+:id}.{format}</pattern>
		<default-parameter name="action">update</default-parameter>
		<default-parameter name="method">POST</default-parameter>
	</route>
	<route>
		<pattern>{method}/{controller}/{\d+:id}/{action}</pattern>
		<default-parameter name="format">html</default-parameter>
	</route>
	<route>
		<pattern>{method}/{controller}/{\d+:id}/{action}.{format}</pattern>
	</route>
	<route>
		<pattern>{method}/{controller}/{action}</pattern>
		<default-parameter name="format">html</default-parameter>
	</route>
	<route>
		<pattern>{method}/{controller}/{action}.{format}</pattern>
	</route>
</routes>