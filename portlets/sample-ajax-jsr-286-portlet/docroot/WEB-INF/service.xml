<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_0_0.dtd">

<service-builder package-path="com.liferay.sample">
	<namespace>Sample</namespace>
	<entity name="NotepadEntry" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="notepadEntryId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="categoryId" type="long" />
		<column name="createDate" type="Date" />

		<!-- Other fields -->

		<column name="notes" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>
	</entity>
</service-builder>