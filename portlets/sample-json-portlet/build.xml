<?xml version="1.0"?>

<project name="sample-json-portlet" basedir="." default="deploy">
	<import file="../build-common-portlet.xml" />

	<property name="plugin.version" value="1" />
	<property name="plugin.file" value="${project.dir}/dist/${ant.project.name}-${lp.version}.${plugin.version}.war" />

	<target name="compile">
		<copy
			file="${app.server.lib.portal.dir}/jsonrpc.jar"
			todir="docroot/WEB-INF/lib"
		/>

		<antcall target="build-common-portlet.compile" />
	</target>
</project>