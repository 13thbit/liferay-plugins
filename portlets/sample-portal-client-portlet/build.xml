<?xml version="1.0"?>

<project name="sample-portal-client-portlet" basedir="." default="deploy">
	<import file="../build-common-portlet.xml" />

	<property name="plugin.version" value="1" />
	<property name="plugin.file" value="${project.dir}/dist/${ant.project.name}-${lp.version}.${plugin.version}.war" />

	<target name="compile">
		<copy todir="docroot/WEB-INF/lib">
			<fileset
				dir="${app.server.lib.portal.dir}"
				includes="activation.jar,axis.jar,commons-discovery.jar,concurrent.jar,jaxrpc.jar,mail.jar,portal-client.jar,saaj.jar,trove.jar,wsdl4j.jar"
			/>
		</copy>

		<antcall target="build-common-plugin.compile" />
	</target>
</project>