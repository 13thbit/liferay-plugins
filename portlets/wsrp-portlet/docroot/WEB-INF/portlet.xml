<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Consumer</display-name>
		<portlet-class>com.liferay.wsrp.consumer.portlet.ConsumerPortlet</portlet-class>
		<init-param>
			<name>jsp-path</name>
			<value>/consumer</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>WSRP Consumer</title>
			<short-title>WSRP Consumer</short-title>
			<keywords>WSRP Consumer</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<display-name>Producer</display-name>
		<portlet-class>com.liferay.wsrp.producer.portlet.ProducerPortlet</portlet-class>
		<init-param>
			<name>jsp-path</name>
			<value>/producer</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>WSRP Producer</title>
			<short-title>WSRP Producer</short-title>
			<keywords>WSRP Producer</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>