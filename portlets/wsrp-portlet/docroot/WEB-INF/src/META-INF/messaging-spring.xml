<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
>

	<!-- Destinations -->

	<bean id="destination.wsrp" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="liferay/wsrp" />
	</bean>

	<!-- Listeners -->

	<bean id="messageListener.wsrp" class="com.liferay.wsrp.messaging.WSRPMessageListener" />
	<bean id="messageListener.wsrp_cluster" class="com.liferay.portal.kernel.cluster.messaging.ClusterBridgeMessageListener">
		<property name="priority">
			<util:constant static-field="com.liferay.portal.kernel.cluster.Priority.LEVEL5" />
		</property>
	</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator.wsrp" class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="destinations">
			<list>
				<ref bean="destination.wsrp" />
			</list>
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/wsrp">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.wsrp" />
						<ref bean="messageListener.wsrp_cluster" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>