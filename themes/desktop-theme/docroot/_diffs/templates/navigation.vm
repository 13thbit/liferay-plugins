<ul class="taglib-home navigation-menu">

	#if ($show_my_places && ($css_class.contains("vista")))
		<li class="my-places">
			<a href="javascript: ;">$my_places_text</a>

			$theme.myPlaces()
		</li>
	#end

	#foreach ($nav_item in $nav_items)
		#if ($nav_item.isSelected())
			#set ($nav_item_class = "selected")
		#else
			#set ($nav_item_class = "")
		#end

		<li class="$nav_item_class">
			<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.getName()</span></a>

			#if ($nav_item.hasChildren())
				<ul class="child-menu">
					#foreach ($nav_child in $nav_item.getChildren())
						#if ($nav_child.isSelected())
							#set ($nav_child_class = "selected")
						#else
							#set ($nav_child_class = "")
						#end

						<li class="$nav_child_class">
							<a href="$nav_child.getURL()" $nav_child.getTarget()>$nav_child.getName()</a>
						</li>
					#end
				</ul>
			#end
		</li>
	#end
</ul>