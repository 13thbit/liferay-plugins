<div id="sidebar-container">
	<div id="sidebar">
		<div id="sidebar-top">
			<span class="clock">
				<embed allowscriptaccess="sameDomain"
					base="."
					devicefont="true"
					height="100"
					loop="true"
					menu="false"
					play="false"
					quality="best"
					scale="showall"
					src="$theme_flash_folder/clock.swf"
					swliveconnect="false"
					type="application/x-shockwave-flash"
					width="100"
					wmode="transparent" />
			</span>
			<span class="calendar">
				<span class="month">
					$dateUtil.getCurrentDate("EEE", $locale)
				</span>
				<span class="day">
					$dateUtil.getCurrentDate('dd',$locale)
				</span>
			</span>
		</div>
		<div id="sidebar-content"></div>
	</div>
</div>