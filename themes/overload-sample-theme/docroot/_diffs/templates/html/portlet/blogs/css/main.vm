#parse ("$fullTemplatesPath/html/portlet/init.vm")

#set ($companyId = $portal.getCompanyId($request))

#set ($themeId = $paramUtil.getString($request, "themeId"))

#set ($theme = $themeLocalService.getTheme($companyId, $themeId, false))

#set ($themeStaticResourcePath = $theme.getStaticResourcePath())

