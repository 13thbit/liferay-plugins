#parse ($init)

#set ($isIphone = $request.getHeader("User-Agent").toLowerCase().indexOf("iphone") != -1)

<!DOCTYPE html>

<html>

<head>
	<meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />

	<title>$company_name</title>

	#if ($isIphone)
		<meta name="viewport" content="width=device-width, initial-scale=1; maximum-scale=1; minimum-scale=1, user-scalable=no" />
		<meta name="apple-mobile-web-app-capable" content="yes" />

		<link rel="stylesheet" href="$css_folder/custom.css" type="text/css" media="screen" title="iPhone Stylesheet" />
		<link rel="apple-touch-icon" href="$images_folder/apple-touch-icon.png" />

		<script src="$javascript_folder/jquery-1.3.2.min.js" type="text/javascript"></script>
		<script src="$javascript_folder/jquery.ba-url.min.js" type="text/javascript"></script>
		<script src="$javascript_folder/javascript.iphone.js" type="text/javascript"></script>
	#else
		$theme.include($top_head_include)
	#end
</head>

<body class="$css_class">

#if (!$isIphone)
	$theme.include($top_messages_include)

	#parse ("$full_templates_path/dock.vm")
#end

<div id="wrap">
	<div id="page">
		<div id="wrapper">
			<h1 class="logo" style="background: url(${company_logo}); height: ${company_logo_height}px; width: ${company_logo_width}px; ">
				$company_name
			</h1>

			<div class="body">
				$theme.runtime("56_INSTANCE_abcd")
			</div>

			#if ($has_navigation)
				#parse ("$full_templates_path/navigation.vm")
			#end

			#if ($isIphone)
				$theme.include($content_include).replaceAll("\<script(\r|\n|.)+?script\>", "").replaceAll("\<form action=\"\" method=\"post\" name=\"hrefFm\"(\r|\n|.)+?form\>", "")
			#else
				#if ($selectable)
					$theme.include($content_include)
				#else
					$portletDisplay.recycle()

					$portletDisplay.setTitle($the_title)

					$theme.wrapPortlet("portlet.vm", $content_include)
				#end
			#end
		</div>

		<div class="foot">
			$theme.runtime("56_INSTANCE_efgh")
		</div>
	</div>

	<div id="prev"></div>

	<div id="next"></div>
</div>

</body>

#if (!$isIphone)
	$theme.include($bottom_include)
#end

</html>