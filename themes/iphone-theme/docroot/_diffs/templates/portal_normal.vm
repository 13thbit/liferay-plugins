<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

#parse ($init)

<html>

<head>
	<meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
	<meta name="viewport" content="width=device-width, initial-scale=1; maximum-scale=1; minimum-scale=1, user-scalable=no" />

	<title>$the_title - $company_name</title>

	<link rel="stylesheet" href="$css_folder/iphone.css" type="text/css" media="screen" title="iPhone Stylesheet">

	<script type="text/javascript">
		efn = function() {
			return 0;
		};

		Liferay = {
			Portal: {
				Tabs: {
					show: efn
				}
			},
			Portlet: {
				isAjax: efn,
				onLoad: efn,
				process: efn
			},
			Session: {
				init: efn
			},
			Util: {
				focusFormField: efn,
				getSelectedIndex: efn
			}
		};

		submitForm = function(f, a) {
			if (a) {
				f.action = a;
			}

			f.submit();
		};
	</script>

	<script src="$javascript_folder/jquery-1.3.2.min.js" type="text/javascript"></script>
	<script src="$javascript_folder/jquery.ba-url.min.js" type="text/javascript"></script>
	<script src="$javascript_folder/javascript.js" type="text/javascript"></script>
</head>

<body>

$theme.include($top_messages_include)

<div id="wrap">
	<div id="page">
		<div id="wrapper">
			<div class="wrapper-lining">
				<h1 class="logo">
					<a href="$company_url" style="background: url(${company_logo}); height: ${company_logo_height}px; width: ${company_logo_width}px; ">$the_title - $company_name</a>
				</h1>

				<div class="body">
					<p>
						<strong>$community_name</strong> | $the_title
					</p>
				</div>

				#if ($has_navigation)
					#parse ("$full_templates_path/navigation.vm")
				#end

				#if ($selectable)
					$theme.include($content_include)
				#else
					$portletDisplay.recycle()

					$portletDisplay.setTitle($the_title)

					$theme.wrapPortlet("portlet.vm", $content_include)
				#end
			</div>

			<div class="foot">
				#if ($show_control_panel)
					<a href="$control_panel_url">$control_panel_text</a> |
				#end
		
				#if ($show_my_account)
					<a href="$my_account_url">$my_account_text</a> |
				#end
		
				#if ($show_sign_in)
					<a href="$sign_in_url">$sign_in_text</a>
				#end
		
				#if ($show_sign_out)
					<a href="$sign_out_url">$sign_out_text</a>
				#end
			</div>		
		</div>
	</div>

	<div id="prev"></div>

	<div id="next"></div>
</div>

</body>

$theme.include($bottom_include)

</html>