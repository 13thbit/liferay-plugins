<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
	>

	<import resource="report-jasper-spring.xml"/>

	<bean id="destination.report_requests"
		  class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String"
						 value="liferay/report_requests"/>
	</bean>

	<bean id="destination.report_results"
		  class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<constructor-arg index="0" type="java.lang.String"
						 value="liferay/report_results"/>
	</bean>


	<bean id="messageListener.request.report"
		  class="com.liferay.portlet.bi.reporting.messaging.ReportRequestMessageListener">
		<constructor-arg index="0"
						 type="com.liferay.portlet.bi.reporting.ReportEngine"
						 ref="com.liferay.portal.bi.report.ReportEngine"/>
		<constructor-arg index="1"
						 type="com.liferay.portlet.bi.reporting.ReportResultContainer">
			<bean class="com.liferay.portlet.bi.reporting.ByteArrayReportResultContainer"/>
		 </constructor-arg>

	</bean>

	<bean id="messagingConfigurator"
		  class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator"
		  init-method="init" destroy-method="destroy">
		<property name="destinations">
			<list>
				<ref bean="destination.report_requests"/>
				<ref bean="destination.report_results"/>
			</list>
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/report_requests">
					<list
						value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.request.report"/>
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>


