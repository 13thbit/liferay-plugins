<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

	<bean id="liferayDataSource" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
		<property name="targetDataSource">
			<bean class="com.liferay.portal.kernel.util.InfrastructureUtil" factory-method="getDataSource" />
		</property>
	</bean>

	<bean id="com.liferay.portal.bi.report.ReportEngine" class="com.liferay.portal.bi.reporting.jasper.JasperReportEngine">
		<constructor-arg index="0" type="com.liferay.portal.bi.reporting.jasper.compiler.ReportCompiler">
			<bean class="com.liferay.portal.bi.reporting.jasper.compiler.CachingReportCompiler">
				<constructor-arg index="0" type="com.liferay.portal.bi.reporting.jasper.compiler.ReportCompiler">
					<bean class="com.liferay.portal.bi.reporting.jasper.compiler.DefaultReportCompiler"/>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<property name="reportFormatExporterRepository" ref="com.liferay.portal.kernel.bi.report.ReportFormatExporterRepository"/>
		<property name="defaultDataSouce" ref="liferayDataSource"/>
	</bean>

	<bean id="com.liferay.portal.kernel.bi.report.ReportFormatExporterRepository"
		class="com.liferay.portal.kernel.bi.reporting.ReportFormatExporterRegistry">
		<property name="exporters">
			<map key-type="java.lang.String" value-type="com.liferay.portal.kernel.bi.reporting.ReportFormatExporter">
				<entry key="html">
					<bean class="com.liferay.portal.bi.reporting.jasper.exporter.HTMLReportFormatExporter"/>
				</entry>
				<entry key="pdf">
					<bean class="com.liferay.portal.bi.reporting.jasper.exporter.PDFReportFormatExporter"/>
				</entry>
			</map>
		</property>
	</bean>
</beans>
